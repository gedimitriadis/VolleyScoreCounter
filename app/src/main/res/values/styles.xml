<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewSets">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/textSize36</item>
    </style>

    <style name="TextViewPoints">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">228dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize72</item>
    </style>

    <style name="ButtonPoints">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">97dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
        <item name="android:text">@string/addPoint</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextTeam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewSetsAtBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">343dp</item>
        <item name="android:layout_marginLeft">@dimen/margin8dp</item>
        <item name="android:layout_marginRight">@dimen/margin8dp</item>
        <item name="android:background">?android:attr/colorPressedHighlight</item>
        <item name="android:padding">@dimen/padding4dp</item>
    </style>

    <style name="constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewScoreAtBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin8dp</item>
        <item name="android:layout_marginRight">@dimen/margin8dp</item>
        <item name="android:text">0 - 0</item>
    </style>

    <style name="EditTextTeamNames">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin16dp</item>
        <item name="android:layout_marginRight">@dimen/margin16dp</item>
        <item name="android:textColor">?android:attr/colorPressedHighlight</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

</resources>


